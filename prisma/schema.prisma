generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model card {
  id            Int     @id @default(autoincrement())
  deck          deck @relation(fields: [deckId], references: [id])
  deckId        Int
  cardQuestion  String?
  cardAnswer    String?

  @@index(deckId)
}

model deck {
  id            Int @id @default(autoincrement())
  deckName      String?
  cards         card[]
  deckAmount    Int @default(0)
  amountNew     Int @default(0)
  amountRelearn Int @default(0)
  amountReview  Int @default(0)
}

model user {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  username      String   @unique
  passwordHash  String
  createdAt     DateTime @default(now())
}